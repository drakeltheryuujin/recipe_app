
<%= form_tag recipes_path, :method => 'get' do %>
<p>
<%= text_field_tag :search%>
<%= submit_tag 'Find A Recipe!'%>
</p>
<%end%>

<!-- INSERT TOGGLE TO SHOW ONLY ALLERGY FREE RECIPES-->
<%@recipes.each do |recipe|%>
<h1><a href = <%=recipe_path(recipe.id)%>><%=recipe.norm_title%></a></h1>
<div class="container">
<img src='<%=recipe.display_image%>' , size: "200x200" ></img>
</div>
Crafted by
<%= link_to recipe.author.user.name, user_path(recipe.author.user.id) %>
<%end%>

