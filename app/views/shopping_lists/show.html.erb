<h1>My Shopping List</h1>

<%@shopping_list.count_same_ingredients.each do |ingredient, count|%>
  <ul><%if count > 1 %>
    <li><%= "#{count} #{ingredient}s" %><br></li>
  <%else%>
    <li><%= "#{count} #{ingredient}" %><br></li>
  <%end%></ul>
<%end%>

